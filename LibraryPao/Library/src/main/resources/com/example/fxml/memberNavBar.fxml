<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefWidth="1920.0" styleClass="hidden-scrollbar" vbarPolicy="NEVER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.memberNavBarController">
   <content>
      <BorderPane minHeight="1080.0" minWidth="1920.0" prefWidth="1920.0" stylesheets="@styles.css">
   <top>
      <StackPane alignment="TOP_CENTER" prefHeight="200.0" BorderPane.alignment="TOP_CENTER">
         <children>
            <ImageView fitHeight="200.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Header.png" />
               </image>
            </ImageView>
            <Pane maxHeight="200.0" prefHeight="200.0" styleClass="semi-transparent-green" />
            <Pane maxHeight="-Infinity" prefHeight="80.0" styleClass="semi-transparent-black" />
            <VBox alignment="TOP_CENTER">
               <children>
                  <HBox alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="80.0" spacing="50.0">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                           <image>
                              <Image url="@Logo.png" />
                           </image>
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                        </ImageView>
                              <Pane HBox.hgrow="ALWAYS" />
                        <Button fx:id="homeButton" mnemonicParsing="false" onAction="#returnHome" styleClass="transparent-button" text="Home">
                           <font>
                              <Font name="Lucida Sans Unicode" size="30.0" />
                           </font>
                        </Button>
                        <Button fx:id="aboutButton" mnemonicParsing="false" onAction="#returnAbout" styleClass="transparent-button" text="About">
                           <font>
                              <Font name="Lucida Sans Unicode" size="30.0" />
                           </font>
                        </Button>
                        <Button fx:id="branchesButton" mnemonicParsing="false" onAction="#returnBranches" styleClass="transparent-button" text="Branches">
                           <font>
                              <Font name="Lucida Sans Unicode" size="30.0" />
                           </font>
                        </Button>
                              <Pane HBox.hgrow="ALWAYS" />
                              <MenuButton fx:id="accountMenuButton" mnemonicParsing="false" styleClass="transparent-button menu-button" text="Account" textFill="WHITE">
                          <items>
                            <MenuItem fx:id="logoutMenuItem" mnemonicParsing="false" onAction="#handleLogout" styleClass="menu-item" text="Logout" />
                          </items>
                                 <HBox.margin>
                                    <Insets right="20.0" />
                                 </HBox.margin>
                        </MenuButton>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" prefHeight="200.0" spacing="10.0">
                     <children>
                        <Line endX="100.0" startX="100.0" startY="50.0" stroke="#86c69a" strokeLineCap="ROUND" strokeWidth="3.0" />
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="page-title" text="Placeholder">
                           <font>
                              <Font name="Lucida Sans Unicode" size="40.0" />
                           </font>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Text>
                     </children>
                           <padding>
                              <Insets left="30.0" />
                           </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </top>
   <center>
      <StackPane fx:id="nestedUI" minHeight="880.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <StackPane maxHeight="-Infinity" prefHeight="100.0" styleClass="bottom-navbar" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" maxHeight="-Infinity" prefHeight="100.0" spacing="50.0" />
         </children>
      </StackPane>
   </bottom>
</BorderPane>
   </content>
</ScrollPane>
